{
  "name": "work-hour-tracker/app",
  "type": "project",
  "description": "Employee weekly hour tracking app built with Laravel + Filament",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "laravel/framework": "^11.0",
    "filament/filament": "^3.2",
    "spatie/laravel-permission": "^6.0"
  },
  "require-dev": {
    "laravel/pint": "^1.13",
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "test": [
      "@phpunit"
    ]
  }
}
